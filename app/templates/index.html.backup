{% extends 'base.html' %}

{% block content %}
<style>
    /* Override base navbar for dark theme */
    .navbar {
        background: transparent !important;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
        backdrop-filter: blur(10px);
    }

    /* Dark Luxury Background */
    body {
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 30%, #0f1419 70%, #1a1f3a 100%);
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
    }

    /* Tech Background Layer */
    .tech-layer {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }

    .tech-layer::before {
        content: '';
        position: absolute;
        width: 200%;
        height: 200%;
        background-image:
            linear-gradient(90deg, rgba(0, 119, 255, 0.05) 1px, transparent 1px),
            linear-gradient(rgba(0, 119, 255, 0.05) 1px, transparent 1px);
        background-size: 100px 100px;
        animation: techDrift 40s linear infinite;
        opacity: 0.3;
    }

    @keyframes techDrift {
        0% {
            transform: translate(0, 0);
        }

        100% {
            transform: translate(100px, 100px);
        }
    }

    .tech-layer::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        background:
            radial-gradient(circle at 20% 30%, rgba(0, 119, 255, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(138, 43, 226, 0.08) 0%, transparent 50%);
        animation: glowPulse 15s ease-in-out infinite;
    }

    @keyframes glowPulse {

        0%,
        100% {
            opacity: 0.3;
        }

        50% {
            opacity: 0.6;
        }
    }

    /* Main Content Container */
    .main-container {
        position: relative;
        z-index: 1;
        max-width: 1400px;
        margin: 0 auto;
        padding: 3rem 2rem;
    }

    /* Hero Section */
    .hero-section {
        text-align: center;
        margin-bottom: 4rem;
        padding: 3rem 0;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 200;
        color: #ffffff;
        letter-spacing: 8px;
        margin-bottom: 1.5rem;
        font-family: 'Playfair Display', serif;
        text-shadow:
            0 0 40px rgba(255, 255, 255, 0.4),
            0 0 80px rgba(0, 119, 255, 0.2);
        animation: titleGlow 3s ease-in-out infinite;
    }

    @keyframes titleGlow {

        0%,
        100% {
            text-shadow:
                0 0 40px rgba(255, 255, 255, 0.4),
                0 0 80px rgba(0, 119, 255, 0.2);
        }

        50% {
            text-shadow:
                0 0 60px rgba(255, 255, 255, 0.6),
                0 0 120px rgba(0, 119, 255, 0.3);
        }
    }

    .hero-subtitle {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 3rem;
        font-weight: 300;
        letter-spacing: 1px;
    }

    /* Search Form */
    .search-form {
        max-width: 700px;
        margin: 0 auto;
        display: flex;
        gap: 15px;
        align-items: stretch;
    }

    .search-input {
        flex: 1;
        padding: 1.3rem 2rem;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 50px;
        color: #ffffff;
        font-size: 1.1rem;
        font-family: 'Inter', sans-serif;
        transition: all 0.4s ease;
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.1),
            0 0 0 0 rgba(0, 119, 255, 0);
    }

    .search-input:focus {
        outline: none;
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(0, 119, 255, 0.5);
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.15),
            0 0 0 4px rgba(0, 119, 255, 0.1);
        transform: translateY(-2px);
    }

    .search-input::placeholder {
        color: rgba(255, 255, 255, 0.3);
    }

    .search-button {
        padding: 0 2.5rem;
        background: linear-gradient(135deg, #0077ff 0%, #00a3ff 100%);
        border: none;
        border-radius: 50px;
        color: #ffffff;
        font-size: 1.2rem;
        cursor: pointer;
        transition: all 0.4s ease;
        box-shadow:
            0 10px 30px rgba(0, 119, 255, 0.4),
            0 0 40px rgba(0, 119, 255, 0.2);
        position: relative;
        overflow: hidden;
    }

    .search-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.6s;
    }

    .search-button:hover {
        transform: translateY(-2px);
        box-shadow:
            0 15px 40px rgba(0, 119, 255, 0.5),
            0 0 60px rgba(0, 119, 255, 0.3);
    }

    .search-button:hover::before {
        left: 100%;
    }

    color: #ffffff;
    margin-bottom: 2rem;
    letter-spacing: 3px;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
    }

    /* Product Grid */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
    }

    .product-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.4s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
        text-decoration: none;
        color: inherit;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .product-card:hover {
        transform: translateY(-8px);
        border-color: rgba(0, 119, 255, 0.4);
        box-shadow:
            0 16px 48px rgba(0, 0, 0, 0.4),
            0 0 40px rgba(0, 119, 255, 0.2);
    }

    .product-image-container {
        height: 320px;
        background: rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }

    .product-image-container::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100px;
        background: linear-gradient(to top, rgba(10, 14, 39, 0.8), transparent);
        pointer-events: none;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.05);
    }

    .product-info {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .product-name {
        font-size: 1.3rem;
        font-weight: 500;
        color: #ffffff;
        margin-bottom: 0.8rem;
        letter-spacing: 1px;
    }

    .product-description {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        margin-bottom: 1.2rem;
        flex: 1;
        line-height: 1.6;
    }

    .product-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .product-tag {
        background: rgba(0, 119, 255, 0.15);
        color: #00a3ff;
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 0.8rem;
        border: 1px solid rgba(0, 119, 255, 0.3);
        font-weight: 500;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
        color: rgba(255, 255, 255, 0.5);
    }

    .empty-state i {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        opacity: 0.3;
    }

    .empty-state p {
        font-size: 1.1rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
            letter-spacing: 4px;
        }

        .search-form {
            flex-direction: column;
        }

        .search-button {
            padding: 1.3rem 2rem;
        }

        .product-grid {
            grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            gap: 1.5rem;
        }
    }
</style>

<!-- Tech Background Layer -->
<div class="tech-layer"></div>

<!-- Main Content -->
<div class="main-container">
    <!-- Hero Section -->
    <div class="hero-section">
        <h1 class="hero-title">Stilini Keşfet</h1>
        <p class="hero-subtitle">Yapay zeka destekli moda arama motoru ile aradığın parçayı saniyeler içinde bul.</p>

        <form method="POST" action="{{ url_for('main.index') }}" class="search-form">
            <input type="text" name="query" class="search-input" placeholder="Örn: mavi gömlek, çizgili pantolon..."
                autocomplete="off">
            <button type="submit" class="search-button">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>

    <!-- Search Message -->
    {% if search_message %}
    <div class="search-message">
        <i class="fas fa-info-circle" style="margin-right: 10px;"></i>
        {{ search_message }}
    </div>
    {% endif %}

    <!-- Results -->
    {% if results %}
    <h2 class="results-header">Sonuçlar</h2>
    <div class="product-grid">
        {% for item in results %}
        <a href="{{ url_for('items.detail', item_id=item.id) }}" class="product-card">
            <div class="product-image-container">
                {% set front_img = item.images | selectattr("view_type", "equalto", "front") | first %}
                {% if front_img %}
                <img src="{{ url_for('static', filename='uploads/' + front_img.image_filename) }}" alt="{{ item.name }}"
                    class="product-image">
                {% elif item.images %}
                <img src="{{ url_for('static', filename='uploads/' + item.images[0].image_filename) }}"
                    alt="{{ item.name }}" class="product-image">
                {% else %}
                <div style="color: rgba(255,255,255,0.3);">Görsel Yok</div>
                {% endif %}
            </div>

            <div class="product-info">
                <h3 class="product-name">{{ item.name }}</h3>
                <p class="product-description">{{ item.description | truncate(80) }}</p>

                <div class="product-tags">
                    {% for feature in item.features[:3] %}
                    <span class="product-tag">{{ feature.value }}</span>
                    {% endfor %}
                </div>
            </div>
        </a>
        {% endfor %}
    </div>
    {% elif request.method == 'POST' %}
    <div class="empty-state">
        <i class="fas fa-search"></i>
        <p>Eşleşme bulunamadı. Farklı anahtar kelimeler deneyin.</p>
    </div>
    {% endif %}
</div>
{% endblock %}